<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating,
    collection: [
      [0, style: 'display:none;'],
      [1, icon('fas', 'star',
        class: 'stars px-2 fai-3x',
        id: 'star-1')],
      [2, icon('fas', 'star',
        class: 'stars px-2 fai-3x',
        id: 'star-2')],
      [3, icon('fas', 'star',
        class: 'stars px-2 fai-3x',
        id: 'star-3')],
      [4, icon('fas', 'star',
        class: 'stars px-2 fai-3x',
        id: 'star-4')],
      [5, icon('fas', 'star',
        class: 'stars px-2 fai-3x',
        id: 'star-5')]],
    label_method: :last,
    value_method: :first,
    as: :radio_buttons,
    wrapper_html: { class: 'parent form-inline justify-content-center', },
    input_html: { style: 'display:none;'  },
    checked: [0, true] %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
